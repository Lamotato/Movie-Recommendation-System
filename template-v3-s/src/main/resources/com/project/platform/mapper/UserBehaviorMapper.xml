        delete from user_behavior
        where  id = #{id} 
    </delete>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.project.platform.entity.UserBehavior" useGeneratedKeys="true">
        insert into user_behavior
        ( id,user_id,behavior_type,movie_id,search_keyword,rating,
        duration,device_type,ip_address,create_time)
        values (#{id},#{userId},#{behaviorType},#{movieId},#{searchKeyword},#{rating},
        #{duration},#{deviceType},#{ipAddress},#{createTime})
    </insert>
    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.project.platform.entity.UserBehavior" useGeneratedKeys="true">
        insert into user_behavior
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="userId != null">user_id,</if>
                <if test="behaviorType != null">behavior_type,</if>
                <if test="movieId != null">movie_id,</if>
                <if test="searchKeyword != null">search_keyword,</if>
                <if test="rating != null">rating,</if>
                <if test="duration != null">duration,</if>
                <if test="deviceType != null">device_type,</if>
                <if test="ipAddress != null">ip_address,</if>
                <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="userId != null">#{userId},</if>
                <if test="behaviorType != null">#{behaviorType},</if>
                <if test="movieId != null">#{movieId},</if>
