<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.platform.mapper.MovieCastMapper">

    <!-- 根据电影ID查询演职人员列表 -->
    <select id="listByMovieId" resultType="com.project.platform.entity.MovieCast">
        SELECT *
        FROM movie_cast
        WHERE movie_id = #{movieId}
        ORDER BY sort_order ASC, id ASC
    </select>

    <!-- 根据ID查询 -->
    <select id="selectById" resultType="com.project.platform.entity.MovieCast">
        SELECT * FROM movie_cast WHERE id = #{id}
    </select>

    <!-- 插入 -->
    <insert id="insert" parameterType="com.project.platform.entity.MovieCast" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO movie_cast
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="movieId != null">movie_id,</if>
            <if test="name != null">name,</if>
            <if test="role != null">role,</if>
            <if test="characterName != null">character_name,</if>
            <if test="avatarUrl != null">avatar_url,</if>
            <if test="sortOrder != null">sort_order,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="movieId != null">#{movieId},</if>
            <if test="name != null">#{name},</if>
            <if test="role != null">#{role},</if>
            <if test="characterName != null">#{characterName},</if>
            <if test="avatarUrl != null">#{avatarUrl},</if>
            <if test="sortOrder != null">#{sortOrder},</if>
        </trim>
    </insert>

    <!-- 更新 -->
    <update id="updateById" parameterType="com.project.platform.entity.MovieCast">
        UPDATE movie_cast
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
            <if test="characterName != null">
                character_name = #{characterName},
            </if>
            <if test="avatarUrl != null">
                avatar_url = #{avatarUrl},
            </if>
            <if test="sortOrder != null">
                sort_order = #{sortOrder},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID删除 -->
    <delete id="deleteById">
        DELETE FROM movie_cast WHERE id = #{id}
    </delete>

    <!-- 根据电影ID删除全部演职人员 -->
    <delete id="deleteByMovieId">
        DELETE FROM movie_cast WHERE movie_id = #{movieId}
    </delete>
</mapper>

