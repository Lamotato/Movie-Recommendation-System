<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.platform.mapper.MovieTypeRelationMapper">

    <resultMap id="BaseResultMap" type="com.project.platform.entity.MovieTypeRelation">
            <id property="id" column="id" />
            <result property="movieId" column="movie_id" />
            <result property="typeId" column="type_id" />
            <result property="createTime" column="create_time" />
    </resultMap>

    <sql id="Base_Column_List">
        id,movie_id,type_id,create_time
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from movie_type_relation
        where  id = #{id} 
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete from movie_type_relation
        where  id = #{id} 
    </delete>
    <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.project.platform.entity.MovieTypeRelation" useGeneratedKeys="true">
        insert into movie_type_relation
        ( id,movie_id,type_id,create_time)
        values (#{id},#{movieId},#{typeId},#{createTime})
    </insert>
    <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.project.platform.entity.MovieTypeRelation" useGeneratedKeys="true">
        insert into movie_type_relation
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="id != null">id,</if>
                <if test="movieId != null">movie_id,</if>
                <if test="typeId != null">type_id,</if>
                <if test="createTime != null">create_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="id != null">#{id},</if>
                <if test="movieId != null">#{movieId},</if>
                <if test="typeId != null">#{typeId},</if>
                <if test="createTime != null">#{createTime},</if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.project.platform.entity.MovieTypeRelation">
        update movie_type_relation
        <set>
                <if test="movieId != null">
                    movie_id = #{movieId},
                </if>
                <if test="typeId != null">
                    type_id = #{typeId},
                </if>
                <if test="createTime != null">
                    create_time = #{createTime},
                </if>
        </set>
        where   id = #{id} 
    </update>
    <update id="updateByPrimaryKey" parameterType="com.project.platform.entity.MovieTypeRelation">
        update movie_type_relation
        set 
            movie_id =  #{movieId},
            type_id =  #{typeId},
            create_time =  #{createTime}
        where   id = #{id} 
    </update>

    <!-- 根据类型ID查询电影ID列表 -->
    <select id="listMovieIdsByTypeId" resultType="java.lang.Integer">
        SELECT DISTINCT movie_id
        FROM movie_type_relation
        WHERE type_id = #{typeId}
    </select>

    <!-- 根据类型ID列表查询有共同类型的相似电影ID列表 -->
    <select id="listSimilarMovieIdsByTypeIds" resultType="java.lang.Integer">
        SELECT DISTINCT mtr.movie_id
        FROM movie_type_relation mtr
        WHERE mtr.movie_id != #{excludeMovieId}
        AND mtr.type_id IN
        <foreach collection="typeIds" item="typeId" open="(" separator="," close=")">
            #{typeId}
        </foreach>
        GROUP BY mtr.movie_id
        HAVING COUNT(DISTINCT mtr.type_id) >= 1
        ORDER BY COUNT(DISTINCT mtr.type_id) DESC
        <if test="limit != null and limit > 0">
            LIMIT #{limit}
        </if>
    </select>
</mapper>
